# ===========================================
# Resend Webhook Secret (Required)
# ===========================================
# Get this from your Resend Dashboard when creating a webhook
RESEND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx


# ===========================================
# Database Connectors
# Only configure the one(s) you plan to use
# ===========================================

# -------------------------------------------
# Supabase
# -------------------------------------------
# Get these from your Supabase project settings (Settings > API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -------------------------------------------
# PostgreSQL
# -------------------------------------------
# Standard PostgreSQL connection string
# Works with: Neon, Railway, Render, self-hosted, etc.
POSTGRESQL_URL=postgresql://user:password@host:5432/database

# -------------------------------------------
# MySQL
# -------------------------------------------
# Standard MySQL connection string
MYSQL_URL=mysql://user:password@host:3306/database

# -------------------------------------------
# PlanetScale
# -------------------------------------------
# Get this from your PlanetScale dashboard (Connect > Create password)
PLANETSCALE_URL=mysql://username:password@host/database?ssl={"rejectUnauthorized":true}

# -------------------------------------------
# Snowflake
# -------------------------------------------
# Get these from your Snowflake account
SNOWFLAKE_ACCOUNT=your-account-identifier
SNOWFLAKE_USERNAME=your-username
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_DATABASE=your-database
SNOWFLAKE_SCHEMA=your-schema
SNOWFLAKE_WAREHOUSE=your-warehouse

# -------------------------------------------
# BigQuery
# -------------------------------------------
# Project and dataset IDs from Google Cloud Console
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=your-dataset-id
# Service account credentials JSON (optional if using default credentials)
# Paste the entire JSON content as a single line, or use GOOGLE_APPLICATION_CREDENTIALS env var
BIGQUERY_CREDENTIALS={"type":"service_account","project_id":"..."}

# -------------------------------------------
# ClickHouse
# -------------------------------------------
# Connection details for your ClickHouse instance
CLICKHOUSE_URL=https://your-instance.clickhouse.cloud:8443
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=your-password
CLICKHOUSE_DATABASE=default
